<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	 xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:app="http://schemas.android.com/apk/res-auto"
	 xmlns:tools="http://schemas.android.com/tools"
	 android:layout_width="match_parent"
	 android:layout_height="match_parent"
	 tools:context=".ui.home.HomeFragment"
	 android:orientation="vertical">
	
	<ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
		<LinearLayout
			 android:layout_width="match_parent"
		              android:layout_height="wrap_content"
		              android:orientation="vertical">
			
			<com.google.android.material.card.MaterialCardView
				 android:layout_width="match_parent"
				 android:layout_height="wrap_content"
				 android:layout_margin="5dp"
				 app:shapeAppearance="@style/Widget.Material3.CardView.Filled"
				 app:cardCornerRadius="10dp"
				 app:strokeWidth="1px"
				 app:cardBackgroundColor="?attr/colorSurface"
				 app:cardForegroundColor="@android:color/transparent"
				 app:rippleColor="?attr/colorOnSurface"
				 style="?attr/materialCardViewElevatedStyle">
				<LinearLayout
					 android:layout_width="match_parent"
					 android:layout_height="match_parent"
					 android:padding="5dp"
					 android:orientation="vertical">
					<TextView
						 android:id="@+id/tvDate"
						 android:layout_width="wrap_content" android:layout_height="wrap_content"
						 android:textSize="25sp"
						 android:textColor="@color/black"
						 android:textStyle="bold" android:text="Monday, 11 January 2022"/>
					
					
					<DigitalClock
						 android:textSize="40sp"
						 android:textColor="@color/black"
						 android:textStyle="bold"
						 android:layout_width="wrap_content"
						 android:layout_height="wrap_content"/>
				</LinearLayout>
			
			</com.google.android.material.card.MaterialCardView>
			
			<com.google.android.material.card.MaterialCardView
				 android:layout_width="match_parent"
				 android:layout_height="wrap_content"
				 android:layout_margin="5dp"
				 app:shapeAppearance="@style/Widget.Material3.CardView.Filled"
				 app:cardCornerRadius="10dp"
				 app:strokeWidth="1px"
				 app:cardBackgroundColor="?attr/colorSurface"
				 app:cardForegroundColor="@android:color/transparent"
				 app:rippleColor="?attr/colorOnSurface"
				 style="?attr/materialCardViewElevatedStyle">
				
				<LinearLayout
					 android:layout_width="match_parent"
					 android:layout_height="match_parent"
					 android:padding="5dp"
					 android:orientation="vertical">
					
					<CalendarView
						 android:layout_width="match_parent"
						 android:layout_height="wrap_content"/>
				
				</LinearLayout>
			
			</com.google.android.material.card.MaterialCardView>
			
			<com.google.android.material.card.MaterialCardView
				 android:layout_width="match_parent"
				 android:layout_height="wrap_content"
				 android:layout_margin="5dp"
				 app:shapeAppearance="@style/Widget.Material3.CardView.Filled"
				 app:cardCornerRadius="10dp"
				 app:strokeWidth="1px"
				 app:cardBackgroundColor="?attr/colorSurface"
				 app:cardForegroundColor="@android:color/transparent"
				 app:rippleColor="?attr/colorOnSurface"
				 style="?attr/materialCardViewElevatedStyle">
				
				<LinearLayout
					 android:layout_width="match_parent"
					 android:layout_height="wrap_content"
					 android:padding="5dp"
					 android:orientation="vertical">
					
					<TextView
						 android:layout_width="wrap_content"
						 android:layout_height="wrap_content"
						 android:text="PM Realization"
						 android:textStyle="bold"
						 android:textSize="25sp"/>
					
					<com.github.mikephil.charting.charts.PieChart
						 android:id="@+id/piePMRealitization"
						 android:layout_width="300dp"
						 android:layout_gravity="center_horizontal"
						 android:layout_height="300dp"/>
					
					<LinearLayout
						 android:layout_width="wrap_content"
						 android:layout_height="wrap_content"
						 android:layout_gravity="center_horizontal"
						 android:orientation="horizontal">
						
						<com.google.android.material.button.MaterialButton
							 android:layout_width="wrap_content"
							 android:layout_height="wrap_content"
							 android:text="Monthly"
							 android:layout_margin="5dp"
							 app:cornerRadius="5dp"
							 style="@style/ShapeAppearanceOverlay.Material3.Button"/>
						<com.google.android.material.button.MaterialButton
							 android:layout_width="wrap_content"
							 android:layout_height="wrap_content"
							 android:text="Weekly"
							 android:layout_margin="5dp"
							 app:cornerRadius="5dp"
							 style="@style/ShapeAppearanceOverlay.Material3.Button"/>
						<com.google.android.material.button.MaterialButton
							 android:layout_width="wrap_content"
							 android:layout_height="wrap_content"
							 android:text="Daily"
							 android:layout_margin="5dp"
							 app:cornerRadius="5dp"
							 style="@style/ShapeAppearanceOverlay.Material3.Button"/>
						
					</LinearLayout>
				
				</LinearLayout>
			
			</com.google.android.material.card.MaterialCardView>
			
			<com.google.android.material.card.MaterialCardView
				 android:layout_width="match_parent"
				 android:layout_height="wrap_content"
				 android:layout_margin="5dp"
				 app:shapeAppearance="@style/Widget.Material3.CardView.Filled"
				 app:cardCornerRadius="10dp"
				 app:strokeWidth="1px"
				 app:cardBackgroundColor="?attr/colorSurface"
				 app:cardForegroundColor="@android:color/transparent"
				 app:rippleColor="?attr/colorOnSurface"
				 style="?attr/materialCardViewElevatedStyle">
				
				
				<LinearLayout
					 android:layout_width="match_parent"
					 android:layout_height="wrap_content"
					 android:padding="5dp"
					 android:orientation="vertical">
					
					<TextView
						 android:layout_width="wrap_content"
						 android:layout_height="wrap_content"
						 android:text="Failure"
						 android:textStyle="bold"
						 android:textSize="25sp"/>
					
					
						
					<com.github.mikephil.charting.charts.PieChart
						 android:id="@+id/pieFailure"
						 android:layout_width="300dp"
						 android:layout_gravity="center_horizontal"
						 android:layout_height="300dp"/>
					
					<com.github.mikephil.charting.charts.LineChart
						 android:id="@+id/lineFailure"
						 android:layout_marginTop="5dp"
						 android:layout_width="match_parent"
						 android:layout_height="300dp"/>
					
					
				</LinearLayout>
				
			</com.google.android.material.card.MaterialCardView>
			
			<com.google.android.material.card.MaterialCardView
				 android:layout_width="match_parent"
				 android:layout_height="wrap_content"
				 android:layout_margin="5dp"
				 app:shapeAppearance="@style/Widget.Material3.CardView.Filled"
				 app:cardCornerRadius="10dp"
				 app:strokeWidth="1px"
				 app:cardBackgroundColor="?attr/colorSurface"
				 app:cardForegroundColor="@android:color/transparent"
				 app:rippleColor="?attr/colorOnSurface"
				 style="?attr/materialCardViewElevatedStyle">
				
				<HorizontalScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
					<LinearLayout
						 android:layout_width="wrap_content"
						 android:padding="5dp"
						 android:layout_height="wrap_content" android:orientation="vertical">
						
						<TextView
							 android:layout_width="match_parent"
							 android:layout_height="wrap_content"
							 android:text="Failure Thread"
							 android:textStyle="bold"
							 android:textSize="25sp"/>
						
						<TableLayout
							 android:id="@+id/tableFailure"
							 android:layout_width="match_parent"
							 android:layout_height="wrap_content"/>
						
					</LinearLayout>
				</HorizontalScrollView>
				
			</com.google.android.material.card.MaterialCardView>
			
		
		</LinearLayout>
	</ScrollView>


</LinearLayout>